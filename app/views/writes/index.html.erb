<p id="notice"><%= notice %></p>

<h1>Listing Writes</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Board</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @writes.each do |write| %>
      <tr>
        <td><%= write.user_id %></td>
        <td><%= write.board_id %></td>
        <td><%= write.body %></td>
        <td><%= link_to 'Show', write %></td>
        <td><%= link_to 'Edit', edit_write_path(write) %></td>
        <td><%= link_to 'Destroy', write, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

