        </ul><!--top-list-->
    </div><!--top-content-->
    <div class="content">
        <h2>ユーザーの評価</h2>
        <div class="reviews">
            <% @comments.each do |comment| %>
            <div class="review">
                <div class="user-icon">
                    <%= image_tag comment.user.image %>
                </div>
                 <%= comment.user.name %>
                <p class="eva-t"><%= comment.title %></p>
                <p class="eva-s"><%= comment.body %></p>
                <ul class="eva-li">
                    <li>
                        <span>サポート</span><%= comment.support %>
                    </li>
                    <li>
                        <span>デザイン</span><%= comment.design %>
                    </li>
                    <li>
                        <span>使用感</span><%= comment.feeling %>
                    </li>
                    <li>
                        <span>出金対応</span><%= comment.payment %>
                    </li>
                </ul>
            </div>
            <% if logged_in? && comment.user == current_user %>
                <a><%= link_to '削除', comment_path(comment), method: :delete %></a>
            <% end %>
          <% end %>
          <% if logged_in? %>
            <%= render 'comments/form' %>
            <% else %>
            <h3>評価をするにはログインが必要です</h3>
          <% end %>
          </div>
